<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ViewPlaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessibility Info"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="40dp" />

        <!-- Name -->
        <TextView android:text="Place Name:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20sp" android:textColor="#2196F3"/>
        <TextView android:id="@+id/tv_name" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- City -->
        <TextView android:text="City:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"/>
        <TextView android:id="@+id/tv_city" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Type -->
        <TextView android:text="Type:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_type" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Address -->
        <TextView android:text="Address:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_address" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Accessible Entrance -->
        <TextView android:text="Accessible Entrance:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_entrance" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Accessible Toilet -->
        <TextView android:text="Accessible Toilet:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_toilet" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Rating -->
        <TextView android:text="Accessibility Rating:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_rating" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp" />

        <!-- Notes -->
        <TextView android:text="Notes:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_notes" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="8dp" android:textSize="20sp"/>

        <!-- Added By -->
        <TextView android:text="Added By:" style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="#2196F3"  />
        <TextView android:id="@+id/tv_added_by" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="#000000"
            android:layout_marginBottom="16dp" android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text=""/>

    </LinearLayout>


</ScrollView>